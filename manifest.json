{
  "manifest_version": 2,
  "name": "WebDash",
  "description": "Quick launcher for websites",
  "version": "1.3.0",
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png"
    }
  },
  "permissions": ["activeTab"],
  "background": {
    "scripts": ["index.js"],
    "persistent": false
  }
}
